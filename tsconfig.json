{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "downlevelIteration": true, // for Map<T, U> loop
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "prisma/*"],
      "@package": ["package.json"],
      "@next/third-parties/*": ["node_modules/@next/third-parties/dist/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.ts",
    "src/lib/utils/email.js",
    "scripts/update_version.js"
  ],
  "exclude": ["node_modules"]
}
